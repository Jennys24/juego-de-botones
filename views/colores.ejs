<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Botón Épico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/estilos.css">
    
  </head>
  <body id="arcoiris">


    <div class="my-5 d-grid gap-2 col-6 mx-auto">
    
    <button id="verde-green" class="btn btn-outline-success align-center d-inline py-2 m-auto w-50 h-35 rounded-1 fw-bolder">Verde</button>
   
    <button id="blue-azul" class="btn btn-outline-primary align-center d-inline py-2 m-auto w-50 h-35 rounded-1 fw-bolder">Azul</button>

    <button id="pink-rosado" class="btn btn-outline-danger align-center d-inline py-2 m-auto w-50 h-35 rounded-1 fw-bolder">Rosado</button>
    
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        
      const socket = io('http://localhost:8000');     

      function hablar(mensaje) {
      var msg = new SpeechSynthesisUtterance();
      msg.text = mensaje;
      window.speechSynthesis.speak(msg)
      }

      $(document).ready(function(){
      
        //se captura la orden de los botones y se envia al server...
        $('#verde-green').on('click', function(){
          socket.emit('coloreando-verde');
        });
        $('#blue-azul').on('click', function(){
          socket.emit('coloreando-azul');
        });
        $('#pink-rosado').on('click', function(){
          socket.emit('coloreando-rosa');
        });

        //recibo la informacion del server y la envío en el html con text
        socket.on('cambiando-verde', function(data){
          $('body').css('background-color', 'green');
          hablar('verde');
        });

        socket.on('cambiando-azul', function(data){
          $('body').css('background-color', 'blue');
          hablar('azul');
        });
        socket.on('cambiando-rosa', function(data){
          $('body').css('background-color', 'pink');
          hablar('rosado');
        });

      });
      
    </script>

  </body>

</html>